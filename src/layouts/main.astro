---
import "@/styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/.png"
      href="/sticky-notes/sticky-note-white.png"
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      type="image/.png"
      href="/sticky-notes/sticky-note-black.png"
      media="(prefers-color-scheme: light)"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
